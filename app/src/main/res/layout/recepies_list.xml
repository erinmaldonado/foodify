<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recipesImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/recipesDisplayName"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/recipesDisplayName"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:text="food name here"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:text="SAMPLE TEXT SEE IF WE CAN HAVE DETAILS ABOUT THE RECIPES HERE "
        android:layout_toRightOf="@+id/recipesImg"/>

</RelativeLayout>